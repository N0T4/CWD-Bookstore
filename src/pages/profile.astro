---
import Layout from "./layout.astro";
---

<Layout >
    <div>
        <section id="hero">
            <div id="username">
                USERNAME
            </div>
        </section>

        <section id="main">
            <div id="outerBox">
                <div id="profileBox">

                </div>
            </div>
        </section>
    </div>
</Layout>
<style>
    #hero {
        width: 100;
        height: 235px;
        background: var(--MAINGR, linear-gradient(130deg, #000 25.43%, #8C5EE7 140.97%));
    }

    #username {
        color: #FFF;
        text-align: center;
        margin: auto;
        font-family: "Libre Barcode 39 Extended Text";
        font-size: 120px;
        font-style: normal;
        font-weight: 400;
        line-height: normal;
    }

    #outerBox {
        width: 1152px;
        height: 625px;
        margin: auto;
        border-radius: 20px;
        background: rgba(237, 233, 246, 0.41);
    }

    #profileBox {
        width: 1076px;
        height: 544px;
        margin: auto;
        flex-shrink: 0;
        border-radius: 20px;
        background: #FFF;
    }

</style>
