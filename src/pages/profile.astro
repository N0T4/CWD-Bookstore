<style>
    #hero {
        width: 100;
        height: 235px;
        background: var(--MAINGR, linear-gradient(160deg, #000 25.43%, #8C5EE7 140.97%));
        display: flex;

    }

    #username {
        color: #FFF;
        text-align: center;
        align-items: center;
        margin: auto;
        font-family: "Libre Barcode 39 Extended Text";
        font-size: 120px;
        font-style: normal;
        font-weight: 400;
        line-height: normal;
    }

    #outerBox {
        width: 1152px;
        height: 625px;
        margin: auto;
        margin-top: 2.5rem;
        border-radius: 35px;
        background: rgba(237, 233, 246, 0.41);
        display: grid;
    }

    #profileBox {
        width: 1076px;
        height: 544px;
        margin: auto;
        flex-shrink: 0;
        border-radius: 15px;
        background: #FFF;
        display: flex;
    }

    span {
        color: #50F;
        text-align: center;
        font-family: "M PLUS 2";
        font-size: 24px;
        font-style: normal;
        font-weight: 400;
        line-height: normal;
    }

</style>
