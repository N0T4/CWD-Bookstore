---
import Layout from "../layout/layout.astro";
---

<Layout>
  <section class="headimage">
    <img src="../../contactUs.jpg" />
    <h1>BOOK STORE</h1>
  </section>
  <div class="container">
    <img src="./jujutsu_logo.webp" alt="logo" class="logo" />
    <section class="about">
      <div class="left">
        <form>
          <label for="name">Name</label>
          <input type="text" name="name" class="inp" />
          <label for="name">MESSAGE</label>
          <textarea type="text" name="name" class="inp q"></textarea>

          <button type="button" class="submit">SUBMIT</button>
        </form>
      </div>
      <div class="right">
        <span> PHONE: +81334645111</span>
        <span> EMAIL: shibuya.parco@gmail.com</span>
        <span
          >INSTAGRAM:https://<br />www.instagram.com/par<br
          />co_shibuya_official/</span
        >
      </div>
    </section>
  </div>
  <style>
    .logo {
      margin-top: 40px;
      width: 84px;
      height: 84px;
      flex-shrink: 0;
    }
    .submit:hover {
      background: #e2dbff;
      cursor: pointer;
    }
    .submit {
      width: 195px;
      height: 50px;

      border-radius: 10px;
      background: #e2dbf0;

      color: #50f;
      text-align: center;
      font-family: "M PLUS 2";
      font-size: 24px;
      font-style: normal;
      font-weight: 300;
      line-height: normal;

      margin-top: 45px;
      border: none;
    }
    .q {
      height: 250px;
    }
    .inp {
      margin-top: 30px;
      width: 320px;
      padding: 15px;

      border-radius: 10px;
      border: 2px solid #8c5ee7;
      background: #e2dbf0;
    }
    label {
      margin-top: 50px;
      color: #50f;
      text-align: center;
      font-family: "M PLUS 2";
      font-size: 24px;
      font-style: normal;
      font-weight: 300;
      line-height: normal;
    }
    span {
      width: 594px;
      color: #000;
      font-family: "M PLUS 2";
      font-size: 48px;
      font-style: normal;
      font-weight: 400;
      line-height: normal;
    }
    .container {
      display: flex;
      align-items: center;
      width: 1152px;
      margin: 0 auto;
      flex-direction: column;
    }

    .headimage {
      overflow: hidden;
      width: 100%;
      height: 600px;
      flex-shrink: 0;
      background: var(
        --MAINGR,
        linear-gradient(130deg, #000 25.43%, #8c5ee7 140.97%)
      );

      box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
      color: aliceblue;
      display: flex;
      justify-content: center;
      align-items: center;
    }
    .headimage > h1 {
      text-align: center;
      font-family: "Libre Barcode 39 Extended Text";
      font-size: 120px;
      font-style: normal;
      font-weight: 400;
      line-height: normal;
      margin: 0;
      position: absolute;
    }
    .headimage > img {
      width: 100%;

      opacity: 0.4;
    }
    form {
      align-items: center;
      border-radius: 20px;
      background: #fff;
      display: flex;
      flex-direction: column;
      padding: 15px 43px;
    }
    .left {
      padding: 40px;
      display: flex;
      justify-content: center;

      height: 793px;
      border-radius: 20px;
      background: rgba(237, 233, 246, 0.41);
    }
    .left > p {
      color: #000;
      text-align: left;
      font-family: "M PLUS 2";
      font-size: 48px;
      font-style: normal;
      font-weight: 400;
      line-height: normal;
    }
    .right {
      padding: 30px;
      display: flex;
      flex-direction: column;
      justify-content: space-around;
    }

    .about {
      display: flex;

      margin-top: 21px;
      margin-bottom: 92px;
      justify-content: space-between;
    }
    h2 {
      text-align: center;
      color: #000;
      text-align: center;
      font-family: "M PLUS 2";
      font-size: 48px;
      font-style: normal;
      font-weight: 400;
      line-height: normal;
    }
    @media screen and (max-width: 1152px) {
      span {
        text-align: center;
        font-size: 32px;
      }
      .container {
        width: 768px;
      }
      .headimage {
        overflow: hidden;
        height: 400px;
      }
      .about {
        flex-direction: column;
        align-items: center;
        gap: 0px;
        margin-bottom: 0px;
      }
      .left {
        box-sizing: border-box;
        padding: 10px;
      }
      .left > p {
        font-size: 32px;
        text-align: center;
      }
      .right {
        padding: 30px;
        display: flex;
        align-items: center;
        margin: 0;
        margin-bottom: 25px;
        gap: 0px;
        width: 700px;
        height: 400px;
      }
      .right > iframe {
        width: 670px;
        height: 450px;
      }
    }
    @media screen and (max-width: 768px) {
      span {
        font-size: 20px;
        width: 320px;
      }
      .container {
        width: 320px;
      }
      .right {
        padding: 0px;
      }
      .left > p {
        text-align: center;
      }
      .right {
        gap: 20px;
        width: 500px;
      }
      .headimage {
        height: 300px;
      }
    }
    @media screen and (max-width: 500px) {
      .container {
        width: 320px;
      }
      .right {
        padding: 0px;
      }
      .left > p {
        text-align: center;
      }
      .right {
        gap: 20px;
        width: 320px;
      }
      .headimage {
        height: 300px;
      }
      .headimage > img {
        height: 100%;
      }
      .headimage > h1 {
        font-size: 48px;
      }
      .left {
        padding: 0px;
      }
      form {
        padding: 0px;
      }
    }
    .inp {
      width: 280px;
      margin-top: 10px;

      border-radius: 10px;
      border: 2px solid #8c5ee7;
      background: #e2dbf0;
    }
    @media screen and (max-width: 320px) {
      .container {
        width: 320px;
      }
      .right {
        padding: 0px;
      }
      .headimage {
        height: 200px;
      }
      .headimage > h1 {
        font-size: 60px;
      }
      .left > p {
        text-align: center;
      }
      .right {
        gap: 20px;
        width: 100%;
        height: 350px;
      }
      .right > iframe {
        width: 100%;
        height: 350px;
      }
      .logo {
        width: 44px;
        height: 44px;
      }
    }
  </style>
</Layout>
