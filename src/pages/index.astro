<script>
  const sale = document.getElementById("Sale");
  const popular = document.getElementById("Popular");
  const New = document.getElementById("New");

  var cardSecSale = document.querySelector(".cardSecSale");
  var cardSecNew = document.querySelector(".cardSecNew");
  var cardSecPopular = document.querySelector(".cardSecPopular");

  function showSaleCards() {
    sale.classList.remove("menuBtn");
    sale.classList.add("menuBtnActive");

    popular.classList.remove("menuBtnActive");
    popular.classList.add("menuBtn");
    New.classList.remove("menuBtnActive");
    New.classList.add("menuBtn");

    cardSecSale.classList.remove("hidden");
    cardSecNew.classList.add("hidden");
    cardSecPopular.classList.add("hidden");
  }

  function showPopularCards() {
    popular.classList.remove("menuBtn");
    popular.classList.add("menuBtnActive");

    sale.classList.remove("menuBtnActive");
    sale.classList.add("menuBtn");
    New.classList.remove("menuBtnActive");
    New.classList.add("menuBtn");

    cardSecPopular.classList.remove("hidden");
    cardSecNew.classList.add("hidden");
    cardSecSale.classList.add("hidden");
  }

  function showNewCards() {
    New.classList.remove("menuBtn");
    New.classList.add("menuBtnActive");

    sale.classList.remove("menuBtnActive");
    sale.classList.add("menuBtn");
    popular.classList.remove("menuBtnActive");
    popular.classList.add("menuBtn");

    cardSecSale.classList.add("hidden");
    cardSecNew.classList.remove("hidden");
    cardSecPopular.classList.add("hidden");
  }

  sale.addEventListener("click", function (event) {
    event.preventDefault();
    showSaleCards();
  });
  popular.addEventListener("click", function (event) {
    event.preventDefault();
    showPopularCards();
  });
  New.addEventListener("click", function (event) {
    event.preventDefault();
    showNewCards();
  });
</script>
