---
import Layout from "./layout.astro";
---

<Layout>
    <section class="headimage">
        <img src="../../locationimg.jpg" />
        <h1>BOOK STORE</h1>
    </section>
</Layout>

<style>
    .headimage {
    overflow: hidden;
    width: 100%;
    height: 600px;
    flex-shrink: 0;
    background: var(
      --MAINGR,
      linear-gradient(130deg, #000 25.43%, #8c5ee7 140.97%)
    );

    box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
    color: aliceblue;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .headimage > h1 {
    text-align: center;
    font-family: "Libre Barcode 39 Extended Text";
    font-size: 120px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    margin: 0;
    position: absolute;
  }
  .headimage > img {
    width: 100%;
    height: 600px;
    opacity: 0.4;
  }
</style>
