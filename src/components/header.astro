<header>
  <div class="logo">
    <img src="../jujutsu_logo.webp" alt="Logo" />
    <span>JK</span>
  </div>
  <nav>
    <ul>
      <li><a href="/index.html" class="home">Home</a></li>
      <li><a href="/catalog/" class="catalog">Catalog</a></li>
      <li><a href="/location/" class="location">Location</a></li>
      <li><a href="/about/" class="about">About</a></li>
    </ul>
  </nav>
  <div class="profBtn prof">
    <a href="/profile/">Profile</a>
  </div>
</header>
<script>
  const currentPageURL = window.location.href;
  const links = document.querySelectorAll("a");

  links.forEach((link) => {
    link.classList.remove("active");
  });

  const home = document.getElementsByClassName("home")[0];
  const catalog = document.getElementsByClassName("catalog")[0];
  const location = document.getElementsByClassName("location")[0];
  const about = document.getElementsByClassName("about")[0];
  const profile = document.getElementsByClassName("prof")[0];

  if (currentPageURL.includes("/catalog/")) {
    catalog.classList.add("active");
  }
  if (currentPageURL.includes("https://cwdbookstore.netlify.app/")) {
    home.classList.add("active");
  }
  if (currentPageURL.includes("/location/")) {
    location.classList.add("active");
  }
  if (currentPageURL.includes("/about/")) {
    about.classList.add("active");
  }
  if (currentPageURL.includes("/profile/")) {
    profile.classList.remove("profBtn");
    profile.classList.add("activeBtn");
  }
</script>

<style>
  .logo {
    display: flex;
    gap: 5px;
    align-items: center;
  }
  img {
    display: inline-block;
    width: 30px;
    height: 30px;
  }
  .active {
    color: #8c5ee7;
  }
  .active::after {
    content: "";
    display: block;
    width: 100%;
    height: 1px;

    background: #8c5ee7;
  }
  header {
    border-radius: 0px 0px 20px 20px;
    background: #fff;
    border-right: 1px solid #000;
    border-bottom: 1px solid #000;
    border-left: 1px solid #000;

    padding-left: 14px;
    padding-right: 14px;

    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 1152px;
    height: 50px;
    margin: 0 auto;

    box-sizing: border-box;
  }
  ul {
    list-style: none;

    display: flex;
    gap: 39px;
  }
  a {
    text-transform: uppercase;
    text-decoration: none;

    color: black;
    text-align: center;
    font-family: "M PLUS 2";
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
  }
  a:hover {
    color: #8c5ee7;
  }
  span {
    color: #000;
    text-align: center;
    font-family: "M PLUS 2";
    font-size: 24px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
  }
  .activeBtn > a {
    box-sizing: border-box;

    padding: 4px 18px;
    border-radius: 10px;
    color: #fff;
    background-color: #8c5ee7;
  }
  .activeBtn::after {
    content: "";
    display: block;

    position: absolute;
    bottom: -4px;
    right: 115px;
    width: 1px;
    height: 30px;

    background: #8c5ee7;
  }
  .activeBtn {
    position: relative;
  }
  .profBtn {
    position: relative;
  }
  .profBtn > a {
    box-sizing: border-box;

    padding: 4px 18px;
    border-radius: 10px;
    background: #e2dbf0;
  }
  .profBtn > a:hover {
    color: #fff;
    background: #8c5ee7;
  }
  .profBtn > a:hover::after {
    content: "";
    display: block;

    position: absolute;
    bottom: -4px;
    right: 115px;
    width: 1px;
    height: 30px;

    background: #8c5ee7;
  }
</style>
