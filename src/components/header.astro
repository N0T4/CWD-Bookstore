  <style>
    .logo{
        display: flex;
        gap:5px;
        align-items: center;
    }
    img{
        display: inline-block;
        width:30px;
        height:30px;
    }
    .active{
        color: #8C5EE7;
    }
    .active::after{
        content: "";
        display: block;
        width: 100%;
        height: 1px;

        background: #8C5EE7;
    }
    header {
        border-radius: 0px 0px 20px 20px;
        background: #FFF;
        border-right: 1px solid #000;
        border-bottom: 1px solid #000;
        border-left: 1px solid #000;

        padding-left: 14px;
        padding-right: 14px;

        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 1152px;
        height: 50px;
        margin: 0 auto;

        box-sizing: border-box;
    }
    ul{
        list-style: none;

        display: flex;
        gap: 39px;
    }
    a{
        text-transform: uppercase;
        text-decoration: none;

        color: black;
        text-align: center;
        font-family: "M PLUS 2";
        font-size: 16px;
        font-style: normal;
        font-weight: 400;
        line-height: normal;
    }
    a:hover {
        color: #8C5EE7;
    }
    span{
        color: #000;
        text-align: center;
        font-family: "M PLUS 2";
        font-size: 24px;
        font-style: normal;
        font-weight: 400;
        line-height: normal;
    }
    .profBtn{
         position: relative;
    }
    .profBtn>a{
        box-sizing: border-box;

        padding: 4px 18px;
        border-radius: 10px;
        background: #E2DBF0;
    }
    .profBtn>a:hover{
        color: #FFF;
        background: #8C5EE7;
    }
    .profBtn>a:hover::after{
        content: "";
        display: block;

        position: absolute;
        bottom: -4px;
        right: 115px;
        width: 1px;
        height: 30px;

        background: #8C5EE7;
    }
  </style>


