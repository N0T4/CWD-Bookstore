<header class="hiddenHeader" id="header">
  <div class="logo" id="logoBtn">
    <img src="../jujutsu_logo.webp" alt="Logo" />
    <span>JK</span>
  </div>
  <nav>
    <ul>
      <li><a href="/" class="home">Home</a></li>
      <li><a href="/catalog/" class="catalog">Catalog</a></li>
      <li><a href="/location/" class="location">Location</a></li>
      <li><a href="/about/" class="about">About</a></li>
    </ul>
  </nav>
  <div class="profBtn prof">
    <a href="/registration/">Profile</a>
  </div>
</header>
<script>
  const currentPageURL = window.location.href;
  const links = document.querySelectorAll("a");

  links.forEach((link) => {
    link.classList.remove("active");
  });

  const home = document.getElementsByClassName("home")[0];
  const catalog = document.getElementsByClassName("catalog")[0];
  const location = document.getElementsByClassName("location")[0];
  const about = document.getElementsByClassName("about")[0];
  const profile = document.getElementsByClassName("prof")[0];

  if (currentPageURL.includes("/")) {
    home.classList.add("active");
  }
  if (currentPageURL.includes("/catalog/")) {
    catalog.classList.add("active");
    home.classList.remove("active");
  }
  if (currentPageURL.includes("/location/")) {
    location.classList.add("active");
    home.classList.remove("active");
  }
  if (currentPageURL.includes("/about/")) {
    about.classList.add("active");
    home.classList.remove("active");
  }
  if (currentPageURL.includes("/profile/")) {
    profile.classList.remove("profBtn");
    profile.classList.add("activeBtn");
    home.classList.remove("active");
  }

  if (currentPageURL.includes("/about-team/")) {
    home.classList.remove("active");
  }
  if (currentPageURL.includes("/contact-us/")) {
    home.classList.remove("active");
  }

  const logoBtn = document.getElementById("logoBtn");
  const header = document.getElementById("header");

  logoBtn.addEventListener("click", () => {
    if (window.innerWidth <= 768) {
      header.classList.toggle("hiddenHeader");
    }
  });
</script>

<style>
  .logo {
    display: flex;
    gap: 5px;
    align-items: center;
  }
  img {
    display: inline-block;
    width: 30px;
    height: 30px;
  }
  .active {
    color: #8c5ee7;
  }
  .active::after {
    content: "";
    display: block;
    width: 100%;
    height: 1px;

    background: #8c5ee7;
  }
  header {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    z-index: 120;
    border-radius: 0px 0px 20px 20px;
    background: #fff;
    border-right: 1px solid #000;
    border-bottom: 1px solid #000;
    border-left: 1px solid #000;

    padding-left: 14px;
    padding-right: 14px;

    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 1152px;
    height: 50px;
    margin: 0 auto;

    box-sizing: border-box;
    transition: all 0.4s;
  }
  ul {
    list-style: none;

    display: flex;
    gap: 39px;
  }
  a {
    text-transform: uppercase;
    text-decoration: none;

    color: black;
    text-align: center;
    font-family: "M PLUS 2";
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    transition: all 0.3s;
  }
  a:hover {
    color: #8c5ee7;
  }
  span {
    color: #000;
    text-align: center;
    font-family: "M PLUS 2";
    font-size: 24px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
  }
  .activeBtn > a {
    box-sizing: border-box;

    padding: 4px 18px;
    border-radius: 10px;
    color: #fff;
    background-color: #8c5ee7;
    transition: all 0.3s;
  }
  .activeBtn::after {
    content: "";
    display: block;

    position: absolute;
    bottom: -4px;
    right: 115px;
    width: 1px;
    height: 30px;

    background: #8c5ee7;
  }
  .activeBtn {
    position: relative;
  }
  .profBtn {
    position: relative;
  }
  .profBtn > a {
    box-sizing: border-box;

    padding: 4px 18px;
    border-radius: 10px;
    background: #e2dbf0;
    transition: all 0.3s;
  }
  .profBtn > a::after {
    content: "";
  }
  .profBtn > a:hover {
    color: #fff;
    background: #8c5ee7;
  }
  .profBtn > a:hover::after {
    content: "";
    display: block;

    position: absolute;
    bottom: -4px;
    right: 115px;
    width: 1px;
    height: 30px;

    background: #8c5ee7;
    transition: all 0.3s;
  }
  @media screen and (max-width: 1152px) {
    header {
      width: 625px;
    }
    ul {
      gap: 20px;
    }
  }
  @media screen and (max-width: 768px) {
    header {
      padding-top: 10px;
      width: 320px;
      height: auto;
      flex-direction: column-reverse;
      align-items: center;
      padding-bottom: 10px;
      top: 0px;
      transition: top 0.4s;
    }
    ul {
      padding: 0px;
      flex-direction: column;
    }
    li {
      text-align: center;
    }
    .logo {
      margin: 0 auto;
    }
    .hiddenHeader {
      top: -210px;
    }
  }
</style>
