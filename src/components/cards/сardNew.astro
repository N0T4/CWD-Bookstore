<script>
  import { MANGA } from "../../../public/MANGA.js";

  const modalWindow = document.getElementById("overlayNew");
  const closeBtn = document.getElementById("closeBtnNew");
  const buyBtn = document.getElementById("buyBtnNew");

  var saleMangaList = [];
  function addNewManga() {
    if (MANGA.length >= 3) {
      saleMangaList.push(MANGA[MANGA.length - 3]);
      saleMangaList.push(MANGA[MANGA.length - 2]);
      saleMangaList.push(MANGA[MANGA.length - 1]);
    } else {
      console.log("Error: Array MANGA contains less than three elements.");
    }
  }

  function changeValue(saleMangaList) {
    const mangaDivs = document.querySelectorAll(".manga");

    saleMangaList.forEach((manga, index) => {
      const mangaDiv = mangaDivs[index];
      const img = mangaDiv.querySelector("img");
      const prevPriceSpan = mangaDiv.querySelector(".prevPrice");

      img.src = manga.image;
      prevPriceSpan.textContent = manga.price;
    });
  }

  function openModalWindowNew() {
    modalWindow.style.display = "flex";
  }

  function closeModalWindow() {
    modalWindow.style.display = "none";
  }

  const elementNew = document.getElementsByClassName("new");
  const elementsWithIndex = document.querySelectorAll("[data-index]");

  console.log(elementNew);

  Array.from(elementNew).forEach(function (element) {
    element.addEventListener("click", function () {
      openModalWindowNew();
      const modalImg = modalWindow.querySelector(".modalImgNew");
      const mangaDiv = this.querySelector(".mangaImgNew");

      const spanMain = this.querySelector(".prevPrice");
      const spanModal = modalWindow.querySelector(".prevPrice");

      spanModal.textContent = spanMain.textContent;

      const imgSrc = mangaDiv.src;
      modalImg.src = imgSrc; // it is okay everything is fine
    });
  });

  closeBtn.addEventListener("click", function (event) {
    closeModalWindow();
  });
  buyBtn.addEventListener("click", function (event) {
    closeModalWindow();
  });

  document.addEventListener("DOMContentLoaded", function () {
    addNewManga();
  });
  document.addEventListener("DOMContentLoaded", function () {
    changeValue(saleMangaList);
  });
</script>

